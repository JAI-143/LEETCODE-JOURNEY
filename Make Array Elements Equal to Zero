class Solution:
    def countValidSelections(self, nums: List[int]) -> int:
        vidai=0
        for j in range(len(nums)):
            if nums[j]==0:
                kp=sum(nums[:j])
                lp=sum(nums[j+1:])
                if kp==lp:
                    vidai+=2
                elif kp==lp-1:
                    vidai+=1
                elif kp-1==lp:
                    vidai+=1
                    

        return vidai
        
